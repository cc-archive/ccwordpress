<?php
foreach ( $this->data as $key => $value ) {
	if (is_array ( $value )) {
		if (! in_array ( $key, array ('usersettings', 'captcha', 'extended_info' ) )) {
			if (array_key_exists ( 'URL', $this->data[$key] )) {
				echo "<br/>" . urldecode ( $key ) . ":<br/><a href='".$this->data[$key]['URL']."'>".$this->data[$key]['Caption']."</a><br/>";
			} else {
				echo "<br/>" . urldecode ( $key ) . ":<br/>" . implode ( ', ', $value ) . "<br/>";
			}
		}
	} else {
		echo "<br/>" . urldecode ( $key ) . ":<br/>" . $value . "<br/>";
	}
}
?>
